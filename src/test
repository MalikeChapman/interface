                            answer = Float.parseFloat(numbers.get(j - 1)) / Float.parseFloat(numbers.get(j + 1));
                            numbers.set(j + 1, Float.toString(answer));
                            numbers.remove(j);
                        }
                    }
                }
            jframe.textArea.results.setText("");
            for (int i = 0; i < numbers.size(); i++) {
                jframe.textArea.results.append(numbers.get(i) + "\n");
